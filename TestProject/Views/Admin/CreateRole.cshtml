@model TestProject.Models.CustomRoleViewModel
@{
    ViewBag.Title = "Make order";
}

<h3>@ViewBag.Error</h3>
<div class="panel panel-success">
    <div class="panel-body">
        <form class="p-a-1" asp-action="CreateRole" method="post">
            <div class="form-group">

                @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Create Role" />
                </div>
            </div>

        </form>
    </div>
</div>
