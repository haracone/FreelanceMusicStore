@model TestProject.Models.FileViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-success">
    <div class="panel-body">
        <form class="p-a-1" asp-action="MakeOrder" method="post">
            <div class="form-group">
                @Html.LabelFor(m => m.PostedFile, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PostedFile, new { @class = "input-file", type = "file" })
                </div>
            </div>
            <br/>   
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Upload File" />
                </div>
            </div>
        </form>
    </div>
</div>

