@model TestProject.Models.ChangeNameViewModel

<div class="panel panel-success">
    <div class="panel-body">
        <form class="p-a-1" asp-action="ChangeName" method="post">
            <div class="form-group">

                @Html.LabelFor(m => m.Name, new { @class = "col-lg-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Surname, new { @class = "col-lg-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Change Name" />
                </div>
            </div>
        </form>
    </div>
</div>
